<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        tools:text="asads"
        android:id="@+id/first_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/first_name_tv"
        android:layout_marginLeft="16dp"
        tools:text="asads"
        android:id="@+id/second_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/line_v"
        android:layout_below="@+id/first_name_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_500"
        />
    <ImageView
        android:layout_below="@+id/line_v"
        android:tint="@color/grey_500"
        android:id="@+id/add_to_lesson_iv"
        android:src="@drawable/vector_add_ic"
        android:layout_toLeftOf="@+id/send_message_iv"
        android:layout_margin="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <ImageView
        android:layout_below="@+id/line_v"
        android:tint="@color/grey_500"
        android:id="@+id/send_message_iv"
        android:layout_alignParentRight="true"
        android:src="@drawable/vector_chats_ic"
        android:layout_margin="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>