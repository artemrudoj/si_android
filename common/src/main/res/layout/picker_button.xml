<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wintersportcoaches.common.ui.views.IconWithHeaderTextView
        android:id="@+id/title_icwhtv"
        app:iconImage="@drawable/vector_skill_ic"
        app:titleText="Навык для улучшения"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/name_tv"
        android:layout_below="@+id/title_icwhtv"
        android:layout_toLeftOf="@+id/arrow_down_iv"
        android:layout_width="match_parent"
        tools:text="asadsasdasdds"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@+id/title_icwhtv"
        android:id="@+id/arrow_down_iv"
        android:layout_alignParentRight="true"
        android:src="@drawable/vector_arrow_down_ic"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</RelativeLayout>