        </activity>
        <activity android:name=".NavigationDrawerPupilActivity" />
        <activity android:name=".createlesson.CreateLessonActivity" />
        <activity android:name=".coaches.CoachesListContainerActivity" />
        <activity android:name=".lessonlist.HistoryLessonActivity" />
        <activity android:name=".chats.ChatsContainerActivity"></activity>
    </application>

</manifest>